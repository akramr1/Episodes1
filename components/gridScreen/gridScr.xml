<?xml version="1.0" encoding="UTF-8"?>

<component name="gridScr" extends="Group" initialfocus="largeGrid">
    <script type="text/brightscript" uri="gridScr.brs" />
    <script type="text/brightscript" uri="pkg:/source/utils.brs"/>
    <interface>
        
        <field id="content" type="node" alias="largeGrid.content"/>
        <field id="rowItemSelected" type="intarray" alwaysnotify="true" alias="largeGrid.rowItemSelected" />
        <field id="jumpToRowItem" type="intarray" alias="largeGrid.jumpToRowItem" />
        
    </interface>

    <children>
        <label id="titleLabel" 
        width="2000"
        translation="[50,0]"
        />
        <label 
        id="descLabel"
        width="2000"
        numlines="3"
        wrap="true"
        translation="[50,100]"
        />
        <RowList
        id="largeGrid"
        RowListItemComponent="rowListItemComponent"
        numRows="2"
        rowitemSize="[[320,120]]"
        rowItemSpacing="[20,0]"
        itemSize="[1800,270]"
        rowLabelOffset="[[50,20]]"
        focusXOffset="[50]"
        showRowLabel="[true]"
        rowFocusAnimationStyle="floatingFocus"
        />
    </children>
</component>
